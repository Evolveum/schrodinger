                <attribute>
                    <ref>ri:login</ref>
                    <!-- Readable name for the attribute. This will be used in GUI -->
                    <displayName>Login</displayName>
                    <!-- Access limitation for this attribute. -->
                    <limitations>
                        <minOccurs>0</minOccurs>
                    </limitations>
                    <outbound>
                        <source>
                            <path>givenName</path>
                        </source>
                        <source>
                            <path>familyName</path>
                        </source>
